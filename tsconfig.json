{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "lit-element": ["node_modules/lit-element"],
      "lit-html": ["node_modules/lit-html"]
    }
  },
  "exclude": ["**/*.test.ts", "coverage"]
}
